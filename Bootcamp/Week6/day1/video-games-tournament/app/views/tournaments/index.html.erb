<div class="clearfix">
  <h1 class="pull-left">Tournaments</h1>

  <button class="btn btn-primary pull-left heading-button hidden"
      data-hook="tourney-add">
    <span class="glyphicon glyphicon-plus"></span>
    Add a tournament
  </button>
</div>

<%= form_tag({}, { :class => "tourney-form hidden", "data-hook" => "tourney-form" }) do %>
  <div class="form-group">
    <label for="tournament_name">Tournament name:</label>
    <input type="text" name="tournament[name]" id="tournament_name"
      class="form-control">
  </div>

  <div data-hook="form-alerts"></div>

  <button type="submit" class="btn btn-success">
    Save tournament
  </button>
<% end %>

<section>
  <h1>Listing Tournaments</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Created At</th>
    <th>Delete?</th>
  </tr>

<% @tournaments.each do |t| %>
  <tr>
    <td><%= t.id %></td>
    <td><%= t.name %></td>
    <td><%= t.created_at %></td>
    <td><%= link_to "Delete", t, method: :delete, data: { confirm: "Are you sure?" }, params: {id: t.id} %></td>
  </tr>
<% end %>
</table>

</section>
